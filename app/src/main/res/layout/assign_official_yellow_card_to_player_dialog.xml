<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="5sp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/assign_yellow_card_to_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/assign_yellow_card"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="5sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/team_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15sp"
        android:layout_below="@id/assign_yellow_card_to_player">

        <TextView
            android:id="@+id/team"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/team_image"
            android:layout_width="27sp"
            android:layout_height="27sp"
            android:layout_marginStart="5sp"
            android:layout_toEndOf="@id/team"
            android:background="@color/objective"
            android:contentDescription="@string/team" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_minute_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:layout_below="@id/team_info">

        <TextView
            android:id="@+id/card_minute_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="5sp"
            android:text="@string/timeline"
            android:textColor="@color/black" />

        <RelativeLayout
            android:id="@+id/card_minute_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@+id/card_minute_description">

            <NumberPicker
                android:id="@+id/card_minute"
                android:layout_width="wrap_content"
                android:layout_height="120sp"
                android:layout_marginHorizontal="25sp"
                android:descendantFocusability="blocksDescendants" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/card_minute_info">

        <ListView
            android:id="@+id/list_view_team_players"
            android:layout_width="160sp"
            android:layout_height="500sp"
            android:layout_marginTop="15sp"
            tools:listitem="@layout/home_scorer" />

    </RelativeLayout>

</RelativeLayout>