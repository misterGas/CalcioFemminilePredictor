<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10sp"
    android:gravity="center">

    <TextView
        android:id="@+id/player_points_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:text="@string/points_info_best11"
        android:layout_marginHorizontal="10sp" />

    <RelativeLayout
        android:id="@+id/player_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="10sp"
        android:layout_below="@id/player_points_info">

        <TextView
            android:id="@+id/role"
            android:layout_width="25sp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/role"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="italic|bold"
            android:layout_marginStart="3sp" />

        <TextView
            android:id="@+id/shirt_number"
            android:layout_width="25sp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/number"
            android:fontFamily="sans-serif-medium"
            android:textStyle="italic|bold"
            android:layout_marginStart="3sp"
            android:layout_below="@id/role" />

        <ImageView
            android:id="@+id/team_image"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginStart="6sp"
            android:layout_marginBottom="3sp"
            android:contentDescription="@string/home_team"
            android:background="@color/objective"
            android:layout_below="@id/shirt_number" />

        <TextView
            android:id="@+id/scorer_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="6sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/first_name"
            android:layout_toEndOf="@id/role" />

        <TextView
            android:id="@+id/scorer_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textSize="16sp"
            android:layout_marginBottom="4sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/last_name"
            android:layout_toEndOf="@id/role"
            android:layout_below="@id/scorer_first_name" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_below="@id/player_info">

        <RelativeLayout
            android:id="@+id/points_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/scorer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scorer"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/scorer_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:layout_marginEnd="10sp"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/more_goals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more_goals_bonus"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:fontFamily="sans-serif-black"
                android:layout_below="@id/scorer" />

            <TextView
                android:id="@+id/more_goals_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:layout_marginEnd="10sp"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                tools:ignore="RelativeOverlap"
                android:layout_below="@id/scorer" />

            <TextView
                android:id="@+id/mvp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mvp"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:fontFamily="sans-serif-black"
                android:layout_below="@id/more_goals"/>

            <TextView
                android:id="@+id/mvp_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:layout_marginEnd="10sp"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                tools:ignore="RelativeOverlap"
                android:layout_below="@id/more_goals" />

            <TextView
                android:id="@+id/own_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/own_goal_descr"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:fontFamily="sans-serif-black"
                android:layout_below="@id/mvp" />

            <TextView
                android:id="@+id/own_goal_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:layout_marginEnd="10sp"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                tools:ignore="RelativeOverlap"
                android:layout_below="@id/mvp" />

            <TextView
                android:id="@+id/yellow_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yellow_card"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:fontFamily="sans-serif-black"
                android:layout_below="@id/own_goal" />

            <TextView
                android:id="@+id/yellow_card_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:layout_marginEnd="10sp"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                tools:ignore="RelativeOverlap"
                android:layout_below="@id/own_goal" />

            <TextView
                android:id="@+id/red_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/red_card"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:fontFamily="sans-serif-black"
                android:layout_below="@id/yellow_card" />

            <TextView
                android:id="@+id/red_card_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:layout_marginEnd="10sp"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                tools:ignore="RelativeOverlap"
                android:layout_below="@id/yellow_card" />

            <TextView
                android:id="@+id/captain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/team_captain"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:fontFamily="sans-serif-black"
                android:layout_below="@id/red_card" />

            <TextView
                android:id="@+id/captain_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:layout_marginEnd="10sp"
                android:text="@string/double_points"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                tools:ignore="RelativeOverlap"
                android:layout_below="@id/red_card" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>