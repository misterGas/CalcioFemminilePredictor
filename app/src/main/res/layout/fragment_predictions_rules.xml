<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PredictionsRules"
    android:background="@color/background">

    <Toolbar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/teal_toolbar"
        android:id="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/toolbar_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp">

            <ImageView
                android:id="@+id/logout"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/logout"
                android:tooltipText="@string/logout"
                android:contentDescription="@string/logout"/>

            <ImageView
                android:id="@+id/back_to_select_championship"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:gravity="center"
                android:src="@drawable/back"
                android:tooltipText="@string/back_to_select_championship"
                android:contentDescription="@string/back_to_select_championship"/>

            <ImageView
                android:id="@+id/hear_rules"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/hear_text"
                android:tooltipText="@string/hear_rules"
                android:contentDescription="@string/hear_rules"
                android:layout_toEndOf="@id/back_to_select_championship"/>

            <TextView
                android:id="@+id/championship_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_below="@+id/logout"/>

        </RelativeLayout>

    </Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10sp"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:id="@+id/rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rules_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/rules_1"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>